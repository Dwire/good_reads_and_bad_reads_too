<h1>Book Title: <%= @book.title %></h1>
<h7>Author: <%= @book.author %></h7></br>
<h7>Genre: <%= @book.genre %></h7></br>
<h7>Page Count: <%= @book.page_count %></h7></br>
<h7>Content: <%= @book.content %></h7>

<h2>READERS OF BOOK</h2>
<% @book.users.each do |user| %>
  <li><%= link_to user.name, user %></li>
<% end %>



<h2>Conversation About BOOK</h2>
<h4>Average Rating: <%= @book.average_rating %></h4>
<% @book_conversations.each do |convo| %>
  <%= convo.user.name %>: <%= convo.content %>
  </br>
  </br>
<% end %>
